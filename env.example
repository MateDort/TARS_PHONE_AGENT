# TARS Phone Assistant Configuration Template
# Copy this file to .env and fill in your actual values

# =========================
# Twilio Configuration
# =========================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TARGET_PHONE_NUMBER=+1234567890
WHATSAPP_ADMIN_NUMBER=+1234567890

# =========================
# Personal Information
# =========================
TARGET_NAME=Your Name
TARGET_EMAIL=your.email@example.com

# =========================
# Webhook Configuration
# =========================
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io
WEBHOOK_PORT=5002
WEBSOCKET_PORT=5001
WEBSOCKET_URL=wss://your-websocket-url.ngrok.io/media

# =========================
# AI Configuration
# =========================
# Gemini (for voice conversations)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=models/gemini-2.5-flash-native-audio-preview-12-2025
GEMINI_VOICE=Puck

# Claude (for programming tasks) - NEW!
ANTHROPIC_API_KEY=sk-ant-api03-xxxxx
CLAUDE_COMPLEX_MODEL=claude-sonnet-4-20250514  # Optional: Sonnet 4.5 (default)
CLAUDE_FAST_MODEL=claude-3-5-haiku-20241022    # Optional: Haiku 3.5 (default)

# =========================
# N8N/KIPP Configuration
# =========================
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/xxxxx
N8N_TARS_WEBHOOK_URL=https://your-webhook-url/tars/incoming

# =========================
# GitHub Integration
# =========================
GITHUB_TOKEN=ghp_xxxxx
GITHUB_USERNAME=your_github_username

# =========================
# TARS Personality
# =========================
HUMOR_PERCENTAGE=70
HONESTY_PERCENTAGE=95
PERSONALITY=normal  # Options: chatty, normal, brief
NATIONALITY=British

# =========================
# Delivery Methods
# =========================
REMINDER_DELIVERY=call  # Options: call, message, email, both
CALLBACK_REPORT=call    # Options: call, message, email, both

# =========================
# Programmer Agent Settings
# =========================
PROJECTS_ROOT=/Users/your_username/
MAX_COMMAND_TIMEOUT=60
ENABLE_CODE_BACKUPS=true
ENABLE_PROGRAMMING_DOCS=true  # NEW! Enable documentation generation
PROGRAMMING_DOCS_DIR=.tars_docs  # NEW! Documentation directory name

# =========================
# Security
# =========================
CONFIRMATION_CODE=1234
REQUIRE_PIN_FOR_UNKNOWN=false
ALLOW_UNKNOWN_CALLERS=true
MAX_UNKNOWN_CALL_DURATION=5

# =========================
# Feature Flags
# =========================
ENABLE_SMS=true
ENABLE_WHATSAPP=true
ENABLE_GOOGLE_SEARCH=true
ENABLE_FUNCTION_CALLING=true
ENABLE_SESSION_PERSISTENCE=true
ENABLE_CALL_SUMMARIES=true
SAVE_CONVERSATION_TRANSCRIPTS=true
CONVERSATION_SEARCH_ENABLED=true

# =========================
# Database & Logging
# =========================
DATABASE_PATH=tars.db
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# =========================
# Session Management
# =========================
MAX_CONCURRENT_SESSIONS=10
MESSAGE_SESSION_TIMEOUT=120
REMINDER_CHECK_INTERVAL=60

# =========================
# Advanced Settings
# =========================
AUTO_CALL=false
IMPORTANT_EMAIL_NOTIFICATION=call
AUDIO_SAMPLE_RATE=8000
CONVERSATION_HISTORY_LIMIT=10
MAX_FUNCTION_CALLS=5
BACKUP_INTERVAL=24
MAX_CONVERSATION_AGE=90
APPROVAL_TIMEOUT_MINUTES=5
ENABLE_APPROVAL_REQUESTS=true
