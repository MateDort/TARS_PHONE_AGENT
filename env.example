# TARS Configuration File (Example)
# Copy this to .env and fill in your actual values

# ============================================================
# REQUIRED CONFIGURATION
# ============================================================

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TARGET_PHONE_NUMBER=+1987654321
WHATSAPP_ADMIN_NUMBER=+36201234567

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/gemini-2.5-flash-native-audio-preview-12-2025
GEMINI_VOICE=Puck

# Claude Configuration (for programming)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_COMPLEX_MODEL=claude-sonnet-4-20250514
CLAUDE_FAST_MODEL=claude-3-5-haiku-20241022

# Webhooks
WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io
WEBSOCKET_URL=wss://your-other-ngrok-url.ngrok.io

# N8N Integration (KIPP)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/your-id
N8N_TARS_WEBHOOK_URL=http://your-tars-url.com/webhook/n8n
# NOTE: Discord updates now route through N8N_WEBHOOK_URL (via KIPP)
# No separate DISCORD_UPDATES_WEBHOOK needed!

# ============================================================
# REDIS & BACKGROUND TASKS
# ============================================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
MAX_TASK_RUNTIME_MINUTES=15
ENABLE_DETAILED_UPDATES=true

# ============================================================
# PERSONALITY
# ============================================================

HUMOR_PERCENTAGE=70
HONESTY_PERCENTAGE=95
PERSONALITY=normal
NATIONALITY=British

# ============================================================
# PROGRAMMING SETTINGS
# ============================================================

PROJECTS_ROOT=/Users/yourusername/
MAX_COMMAND_TIMEOUT=60
ENABLE_CODE_BACKUPS=true
ENABLE_PROGRAMMING_DOCS=true
PROGRAMMING_DOCS_DIR=.tars_docs

# ============================================================
# SECURITY
# ============================================================

CONFIRMATION_CODE=6283  # CHANGE THIS!
ALLOW_UNKNOWN_CALLERS=true

# ============================================================
# FEATURE FLAGS
# ============================================================

ENABLE_SMS=true
ENABLE_WHATSAPP=true
ENABLE_GOOGLE_SEARCH=true
REMINDER_DELIVERY=call
CALLBACK_REPORT=call

# ============================================================
# GITHUB (Optional)
# ============================================================

GITHUB_TOKEN=your_github_token
GITHUB_USERNAME=your_username
